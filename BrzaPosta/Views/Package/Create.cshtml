@model BrzaPosta.Models.Package

@{
    ViewData["Title"] = "Create";
}
<h2>Zahtjev za pošiljku</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <h4>Info pošiljatelja</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact" class="control-label"></label>
                <input asp-for="Contact" class="form-control" />
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <select asp-for="State" class="form-control">
                    <option selected>HNŽ</option>
                    <option>HBŽ</option>
                    <option>ŽZH</option>
                    <option>BPŽ</option>
                    <option>SŽ</option>
                    <option>TŽ</option>
                    <option>USŽ</option>
                    <option>ZDŽ</option>
                    <option>ŽP</option>
                    <option>ŽSB</option>
                    <option>FBiH</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="control-label"></label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <select asp-for="Size" class="form-control">
                    <option selected>XS</option>
                    <option>S</option>
                    <option>M</option>
                    <option>L</option>
                    <option>XL</option>
                    <option>XXL</option>
                </select>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" value="ZAHTJEV ZA POŠILJKU" readonly/>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>



            <h4>Info primatelja</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Name2" class="control-label"></label>
                <input asp-for="Name2" class="form-control" />
                <span asp-validation-for="Name2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName2" class="control-label"></label>
                <input asp-for="LastName2" class="form-control" />
                <span asp-validation-for="LastName2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address2" class="control-label"></label>
                <input asp-for="Address2" class="form-control" />
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact2" class="control-label"></label>
                <input asp-for="Contact2" class="form-control" />
                <span asp-validation-for="Contact2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City2" class="control-label"></label>
                <input asp-for="City2" class="form-control" />
                <span asp-validation-for="City2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State2" class="control-label"></label>
                <select asp-for="State2" class="form-control">
                    <option selected>HNŽ</option>
                    <option>HBŽ</option>
                    <option>ŽZH</option>
                    <option>BPŽ</option>
                    <option>SŽ</option>
                    <option>TŽ</option>
                    <option>USŽ</option>
                    <option>ZDŽ</option>
                    <option>ŽP</option>
                    <option>ŽSB</option>
                    <option>FBiH</option>
                </select>
                <span asp-validation-for="State2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip2" class="control-label"></label>
                <input asp-for="Zip2" class="form-control" />
                <span asp-validation-for="Zip2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Pošalji" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Natrag</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
