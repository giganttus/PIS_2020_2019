@model IEnumerable<BrzaPosta.Models.Package>

@{
    ViewData["Title"] = "Pošiljke";
}


<h1>Pošiljke</h1>

   
<form asp-controller="Package" asp-action="Index">
    <div class="form-row">
        
        <div class="form-group col-md-3">
            <input type="text" class="form-control" name="SearchString" placeholder="Unesite pojam pretrage" />
        </div>

        <div class="form-group col-md-3 offset-5">
            <select class="form-control" name="option">
                <option selected>Filter pretrage</option>
                <option value="1">Ime pošiljatelja</option>
                <option value="2">Prezime pošiljatelja </option>
                <option value="3">Adresa pošiljatelja </option>
                <option value="4">Ime primatelja</option>
                <option value="5">Prezime primatelja </option>
                <option value="6">Adresa primatelja </option>
                <option value="7">Status pošiljke </option>
            </select>
        </div>

        <div class="form-group col-md-1">
            <input type="submit" class="btn btn-primary" value="Pretraži" />
        </div>
    </div>

</form>
    





<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Pregled</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Ukloni</a>
                </td>
            </tr>
        }
    </tbody>
</table>
