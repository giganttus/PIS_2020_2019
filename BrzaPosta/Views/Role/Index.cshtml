@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Ovlasti";
}

<h3>Ovlasti</h3>

<a asp-action="Create" class="btn btn-sm btn-primary">Dodaj</a>

<div class="row float-lg-right">
     <div class="col-md-12">
        <p>
            @using (Html.BeginForm("Index", "Role", FormMethod.Get))
            {
                <div class="input-group">
                    @Html.TextBox("search")
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Pretraži</button>
                    </div>
                </div>

            }
            
        </p>
    </div>
</div>




<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Naziv role</td>
            <td>Upravljanje</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Ukloni
                        </button>
                    </form>
                    <br />
                    <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Uredi</a>
                </td>
            </tr>

        }
    </tbody>
</table>
